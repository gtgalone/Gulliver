<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:layout_marginTop="16dp"
                                                   android:layout_marginBottom="16dp"
>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/direct_messages_row_photo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/direct_messages_row_latest_message"
            app:layout_constraintTop_toTopOf="@+id/direct_messages_row_display_name"/>
    <TextView
            android:id="@+id/direct_messages_row_display_name"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            tools:text="displayName"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/direct_messages_row_photo"
            app:layout_constraintBottom_toTopOf="@+id/direct_messages_row_latest_message"
            app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
            android:id="@+id/direct_messages_row_latest_message"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:alpha="0.8"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            tools:text="latestMessage"
            app:layout_constraintStart_toEndOf="@+id/direct_messages_row_photo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/direct_messages_row_display_name"/>
    <TextView
            android:id="@+id/direct_messages_row_date"
            android:textSize="12sp"
            android:alpha="0.8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            tools:text="date"
            app:layout_constraintBottom_toBottomOf="@+id/direct_messages_row_display_name"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>