<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/content_direct_messages_log_layout"
        android:background="@color/colorSecondary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:showIn="@layout/app_bar_direct_messages_log"
        tools:context=".DirectMessagesLogActivity">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_direct_messages_log"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorWhite"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:stackFromEnd="true"
            app:layout_constraintBottom_toTopOf="@+id/direct_messages_log_edit_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <EditText
            android:id="@+id/direct_messages_log_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorSecondary"
            android:ems="10"
            android:hint="Enter Message"
            android:inputType="textCapSentences|textNoSuggestions|textMultiLine"
            android:minLines="1"
            android:maxLines="3"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recycler_view_direct_messages_log"
            app:layout_constraintEnd_toStartOf="@+id/direct_messages_log_send_button" />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:srcCompat="@android:drawable/ic_menu_send"
            android:id="@+id/direct_messages_log_send_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recycler_view_direct_messages_log"
            android:padding="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
